from financelama.core import Lama as Lama
import financelama.visual as visual

import timeit
import os

def benchmark(function):
    print(timeit.timeit(obj.categorize, number=1))


# Create lama object with dataframe as data property
obj = Lama()

# Read files
#obj.read_file('E:/Dokumente/Finanzen/Analyse/financelama-git/data/1051054540(3).csv')   # Lots of data here
