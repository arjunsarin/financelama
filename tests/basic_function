from financelama.core import Lama as Lama
import financelama.read_dkb as dkb
import financelama.visual as visual

# Create lama object with dataframe as data property
obj = Lama()

# Read files
#obj.readFile('E:/Dokumente/Finanzen/Analyse/financelama-git/data/1051054540(3).csv')   # Lots of data here
obj.data = dkb.read_folder(obj.data, 'E:/Dokumente/Finanzen/Analyse/financelama-git/data/')
obj.cleanup()
obj.categorize()

obj.data.to_csv(path_or_buf='E:/Dokumente/Finanzen/Analyse/financelama-git/financelama/OutputDB.csv')

